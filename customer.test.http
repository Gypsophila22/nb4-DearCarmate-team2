###
# @name LoginUser
POST http://localhost:4000/auth/login
Content-Type: application/json

{
  "email": "your_email@example.com",
  "password": "your_password"
}

###
# @name CreateCustomer
# @depends-on LoginUser
POST http://localhost:4000/api/customers
Content-Type: application/json
Authorization: Bearer {{LoginUser.response.body.token}}

{
  "name": "테스트 고객",
  "gender": "MALE",
  "phoneNumber": "010-1234-5678",
  "ageGroup": "GENERATION_30",
  "region": "서울",
  "email": "test@example.com",
  "memo": "테스트용 고객입니다."
}

###
# @name GetAllCustomers
# @depends-on LoginUser
GET http://localhost:4000/api/customers
Authorization: Bearer {{LoginUser.response.body.token}}

###
# @name GetCustomerById
# @depends-on CreateCustomer
GET http://localhost:4000/api/customers/{{CreateCustomer.response.body.id}}
Authorization: Bearer {{LoginUser.response.body.token}}

###
# @name UpdateCustomer
# @depends-on CreateCustomer
PUT http://localhost:4000/api/customers/{{CreateCustomer.response.body.id}}
Content-Type: application/json
Authorization: Bearer {{LoginUser.response.body.token}}

{
  "name": "수정된 테스트 고객",
  "email": "updated_test@example.com",
  "memo": "정보가 수정된 고객입니다."
}

###
# @name DeleteCustomer
# @depends-on CreateCustomer
DELETE http://localhost:4000/api/customers/{{CreateCustomer.response.body.id}}
Authorization: Bearer {{LoginUser.response.body.token}}
